<div class="container">
    <div class="row">
        <div class="col-md-5-offset-md-3">
            <div class="card card-body bg-ligth p-4 text-dark">
 <h1>Actualizar Profesor</h1>

<form action="/actualizarProfesor/{{profesor._id}}" method="POST">
     <div>
        <label for="rfc">Modificar RFC</label>
        <input type="text" name="rfc" placeholder="RFC" 
        value="{{profesor.rfc}}" class="form-control bg-ligth text-dark">
     </div>
     <div>
        <label for="nombre">Modificar nombre</label>
        <input type="text" name="nombre" placeholder="Nombre" 
        value="{{profesor.nombre}}" class="form-control bg-ligth text-dark">
     </div>
     <div>
        <label for="paterno">Modificar paterno</label>
        <input type="text" name="paterno" placeholder="Paterno" 
        value="{{profesor.paterno}}" class="form-control bg-ligth text-dark">
     </div>
     <div>
        <label for="materno">Modificar materno</label>
        <input type="text" name="materno" placeholder="Materno" 
        value="{{profesor.materno}}" class="form-control bg-ligth text-dark">
     </div>
     <div>
        <label for="fechaNacimiento">Modificar Nacimiento</label>
        <input type="date" name="fechaNacimiento" placeholder="Nacimiento" 
        value="{{profesor.fechaNacimiento}}" class="form-control bg-ligth text-dark">
     </div>
     <div>
        <label for="direccion">Modificar direccion</label>
        <input type="text" name="direccion" placeholder="Direccion" 
        value="{{profesor.direccion}}" class="form-control bg-ligth text-dark">
     </div>
     <div>
        <label for="celular">Modificar celular</label>
        <input type="number" name="celular" placeholder="Celular" 
        value="{{profesor.celular}}" class="form-control bg-ligth text-dark">
     </div>
     <div>
        <label for="profesion">Modificar profesion</label>
        <input type="text" name="profesion" placeholder="Profesion" 
        value="{{profesor.profesion}}" class="form-control bg-ligth text-dark">
     </div>
     <div>
        <label for="numeroEmpleado">Modificar numero</label>
        <input type="text" name="numeroEmpleado" placeholder="Numero" 
        value="{{profesor.numeroEmpleado}}" class="form-control bg-ligth text-dark">
     </div>
     <button style="background-color: rgb(197, 139, 189)" class="btn btn-outline-light btn-sm mt-4">Actualizar</button>
</form>
            </div>
        </div>
    </div>
</div>